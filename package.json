{
  "name": "motion-clone",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "dev": "concurrently \"npm run dev-f\" \"npm run dev-b\"",
    "dev-f": "npm --prefix frontend run dev",
    "dev-b": "npm --prefix backend run dev",
    "build-f": "npm --prefix frontend run build",
    "build-b": "npm --prefix backend run build",
    "build": "npm run build-f && npm run build-b && echo 'Build completed'",
    "test": "concurrently \"npm run test-f\" \"npm run test-b\"",
    "test-f": "npm --prefix frontend run test",
    "test-b": "npm --prefix backend run test",
    "test:watch": "concurrently \"npm run test-f:watch\" \"npm run test-b:watch\"",
    "test-f:watch": "npm --prefix frontend run test:watch",
    "test-b:watch": "npm --prefix backend run test:watch",
    "test:coverage": "concurrently \"npm run test-f:coverage\" \"npm run test-b:coverage\"",
    "test-f:coverage": "npm --prefix frontend run test:coverage",
    "test-b:coverage": "npm --prefix backend run test:coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.1.2",
    "prettier": "^3.2.5"
  }
}