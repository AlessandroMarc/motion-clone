{
  "name": "motion-clone",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "dev": "concurrently \"npm:dev-f\" \"npm:dev-b\"",
    "dev-f": "npm --prefix frontend run dev",
    "dev-b": "npm --prefix backend run dev",
    "build": "npm --prefix frontend run build",
    "build-b": "npm --prefix backend run build",
    "build:all": "npm run build && npm run build-b",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "npm --prefix frontend run test",
    "test:ci": "npm --prefix frontend run test -- --watchAll=false",
    "ci": "npm ci && npm run build:all && npm run test:ci"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.7.4"
  },
  "dependencies": {
    "next": "^16.0.10",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
}