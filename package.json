{
  "name": "motion-clone",
  "version": "1.0.0",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "dev": "concurrently \"npm:dev-f\" \"npm:dev-b\"",
    "dev-f": "npm --prefix frontend run dev",
    "dev-b": "npm --prefix backend run dev",
    "build-f": "npm --prefix frontend run build",
    "build-b": "npm --prefix backend run build",
    "build": "npm run build-f && npm run build-b",
    "lint": "eslint frontend/src backend/src --ignore-pattern '**/node_modules/**' --ignore-pattern '**/.next/**' --ignore-pattern '**/dist/**'",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "npm --prefix frontend run test",
    "test:ci": "npm --prefix frontend run test -- --watchAll=false",
    "ci": "npm ci && npm run build:all && npm run test:ci && npm run lint && npm run format:check && echo 'CI passed'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.7.4"
  },
  "dependencies": {
    "@sentry/nextjs": "^10.35.0",
    "next": "^16.1.4",
    "posthog-js": "^1.331.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sentry": "^0.1.2"
  }
}